doctype html
html(lang='en')
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        title= _pageTitle

        meta(content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no", name="viewport")

        link(rel="stylesheet", href=avoca_static() + "/bower_components/bootstrap/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href=avoca_static() + "/bower_components/font-awesome/css/font-awesome.min.css")
        link(rel="stylesheet", href=avoca_static() + "/bower_components/Ionicons/css/ionicons.min.css")
        link(rel="stylesheet", href=avoca_static() + "/css/AdminLTE.min.css")
        link(rel="stylesheet", href=avoca_static() + "/plugins/iCheck/square/blue.css")
        link(rel="stylesheet", href=avoca_static() + "/css/style.css")

        // [if lt IE 9]
        script(src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js")
        script(src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js")
        // [endif]

        link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic")

    body.hold-transition.login-page
        .login-box
            .login-logo
                a(href="http://avoca.io")
                    b Avoca
                    = 'IO'

            .login-box-body
                p.login-box-msg Sign in to start your session

                form(method="post", action=avoca_url('/install'))

                    h4 Database
                    .form-group.has-feedback
                        input.form-control(name="db_host", type="text", placeholder="Database host", value="localhost")
                        span.glyphicon.glyphicon-pencil.form-control-feedback

                    .form-group.has-feedback
                        input.form-control(name="db_username", type="text", placeholder="Database username", value="root")
                        span.glyphicon.glyphicon-pencil.form-control-feedback

                    .form-group.has-feedback
                        input.form-control(name="db_password", type="text", placeholder="Database password", value="")
                        span.glyphicon.glyphicon-pencil.form-control-feedback

                    .form-group.has-feedback
                        input.form-control(name="db_database", type="text", placeholder="Database name", value="avoca_framework")
                        span.glyphicon.glyphicon-pencil.form-control-feedback

                    h4 Settings

                    .form-group.has-feedback
                        input.form-control(name="title", type="text", placeholder="Page title", value="Avoca IO")
                        span.glyphicon.glyphicon-pencil.form-control-feedback

                    .form-group.has-feedback
                        input.form-control(name="base_url", type="text", placeholder="Base url", value=base_url())
                        span.glyphicon.glyphicon-pencil.form-control-feedback

                    .row
                        .col-xs-8

                        .col-xs-4
                            button.btn.btn-primary.btn-block.btn-flat(type="submit") Install

        script(src=avoca_static() + "/bower_components/jquery/dist/jquery.min.js")
        script(src=avoca_static() + "/bower_components/bootstrap/dist/js/bootstrap.min.js")
        script(src=avoca_static() + "/plugins/iCheck/icheck.min.js")
        script.
            $(function () {
                $('input').iCheck({
                    checkboxClass: 'icheckbox_square-blue',
                    radioClass: 'iradio_square-blue',
                    increaseArea: '20%' /* optional */
                });
            });
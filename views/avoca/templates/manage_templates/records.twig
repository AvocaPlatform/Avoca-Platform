{% extends 'templates/layouts/manage.twig' %}

{% block content %}
    <div class="row ListView">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    {{ 'Modules'|lang }}

                    <div class="card-header-actions">
                        <a class="card-header-action btn-setting" href="{{ avoca_manage(create_link) }}">
                            <i class="fa fa-plus"></i>
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    {% if listdefs %}
                        {{ form_open('', {method: 'get', id: 'ListViewForm'}) }}
                            <table class="table table-responsive-sm table-sortable">
                                <thead>
                                    <tr>
                                        <th width="1%" class="no">
                                            <div class="dropdown">
                                                    <a href="javascript:;" class="dropdown-toggle"
                                                          id="dropdownMenuButton"
                                                          data-toggle="dropdown"
                                                          aria-haspopup="true"
                                                          aria-expanded="false"></a>
                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                    <a class="dropdown-item" id="DeleteRecords" href="javascript:;">{{ 'Delete'|lang }}</a>
                                                </div>
                                            </div>
                                        </th>
                                        {% for field, option in listdefs %}
                                            {% set order = 'asc' %}
                                            {% if field == sort.order %}
                                                order = sort.order;
                                            {% endif %}

                                            <th class="{% if option.nosort %}no{% endif %}{% if sort.field == field %}{{ sort.order }}{% endif %}"
                                                onclick="location.href='{{ avoca_manage(list_link ~ '?order_by=' ~ field ~ '&order=' ~ order) }}'">
                                                {{ fieldLabel(field, option)|lang }}
                                            </th>
                                        {% endfor %}
                                        <th class="no">{{ 'Actions'|lang }}</th>
                                    </tr>
                                    {#Search#}
                                    {% include search_form %}
                                </thead>
                                <tbody>
                                    {% for record in records %}
                                        <tr>
                                            <td><input type="checkbox" name="ids[{{ recordFVal(record, 'id') }}]" class="input-check" value="1"></td>
                                            {% for field, option in listdefs %}
                                                <td>{{ recordVal(record, field, option) }}</td>
                                            {% endfor %}
                                            <td class="list-action">
                                                {% if not viewdefs.disabled_view %}
                                                    <a href="{{ recordLink(view_link, record) }}" class="btn btn-sm btn-info">
                                                        <i class="fa fa-eye"></i>
                                                    </a>
                                                {% endif %}

                                                {% if not viewdefs.disabled_edit %}
                                                    <a href="{{ recordLink(edit_link, record) }}" class="btn btn-sm btn-warning">
                                                        <i class="fa fa-pencil"></i>
                                                    </a>
                                                {% endif %}

                                                {% if not viewdefs.disabled_delete %}
                                                    <a href="{{ recordLink(delete_link, record) }}" class="btn btn-sm btn-danger DeleteRecord">
                                                        <i class="fa fa-trash"></i>
                                                    </a>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                            <nav>{{ pagination|raw }}</nav>
                        {{ form_close() }}
                    {% else %}
                        <div class="alert alert-warning">{{ 'No config layout'|lang }}</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <script>
        $(function () {
            $('#DeleteRecords').click(function () {
                $('#ListViewForm').attr('action', '{{ avoca_manage(delete_batch_link) }}');
                $('#ListViewForm').submit();
            });
            $('a.DeleteRecord').click(function (e) {
                e.preventDefault();
                var href = $(this).attr('href');
                $.confirm({
                    title: 'Confirm!',
                    content: 'Simple confirm!',
                    buttons: {
                        confirm: {
                            text: '{{ 'Ok'|lang }}',
                            action: function () {
                                location.href = href + '?r={{ avoca_currentUrl()|url_encode }}';
                            }
                        },
                        cancel: {
                            text: '{{ 'Cancel'|lang }}',
                        }
                    }
                });
            });
        });
    </script>
{% endblock %}
extends ../../../layouts/admin

block content
    section.content-header
        h1= __('Create Module')
            small= __('Settings')
        ol.breadcrumb
            li
                a(href=avoca_admin())
                    i.fa.fa-dashboard
                    = ' ' + __('Home')
            li.active= __('Dashboard')

    section.content
        form(action=avoca_admin('/settings/create_module'), method="post")
            .box.box-default
                .box-header.with-border
                    h3.box-title= __('Module generate')

                    .box-tools.pull-right
                        a.btn.btn-box-tool(href=avoca_admin('/settings/modules'))
                            i.fa.fa-arrow-circle-left

                .box-body
                    .row
                        .col-md-12
                            .form-group
                                label= __('Model')
                                input.form-control(type="text", name="model", value=module.model)
                            .form-group
                                label= __('Database table')
                                input.form-control(type="text", name="table", value=module.table)
                            .form-group
                                label= __('Controller')
                                input.form-control(type="text", name="controller", value=module.controller)
                            .form-group
                                label= __('Table structure')
                                textarea.form-control(name="table_define", style="height: 200px")= table_fields
                                span.form-text.text-muted= __('1 field/1 line')

                            .form-group
                                label= __('Table indexes')
                                textarea.form-control(name="table_index", style="height: 100px")= table_indexes
                                span.form-text.text-muted= __('1 field/1 line')

                .box-footer
                    button.btn.btn-primary(type="submit")= __('Create module')
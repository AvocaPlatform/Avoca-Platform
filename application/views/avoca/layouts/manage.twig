<!doctype html>
<html lang="en">
<head>
    {% include 'layouts/header.meta.inc.twig' %}
    {% include 'layouts/manage.header.inc.twig' %}
</head>

<body class="app header-fixed sidebar-fixed aside-menu-fixed sidebar-lg-show">
    <header class="app-header navbar">
        <button class="navbar-toggler sidebar-toggler d-lg-none mr-auto" type="button" data-toggle="sidebar-show">
            <span class="navbar-toggler-icon"></span>
        </button>

        <a class="navbar-brand" href="#">
            <img class="navbar-brand-full" src="{{ avoca_static() }}/img/brand/logo.png" width="auto" height="25" alt="AvocaIO">
            <img class="navbar-brand-minimized" src="{{ avoca_static() }}/img/brand/sygnet.png" width="30" height="30" alt="AvocaIO">
        </a>

        <button class="navbar-toggler sidebar-toggler d-md-down-none" type="button" data-toggle="sidebar-lg-show">
            <span class="navbar-toggler-icon"></span>
        </button>

        {% block headerNavL %}
            <ul class="nav navbar-nav d-md-down-none">
                <li class="nav-item px-3">
                    <a class="nav-link" href="{{ avoca_url('/') }}">Dashboard</a>
                </li>
                <li class="nav-item px-3">
                    <a class="nav-link" href="{{ avoca_url('/users') }}">Users</a>
                </li>
                <li class="nav-item px-3">
                    <a class="nav-link" href="{{ avoca_admin('/settings') }}">Settings</a>
                </li>
            </ul>
        {% endblock %}

        {% block headerNavR %}
            <ul class="nav navbar-nav ml-auto">
                <li class="nav-item d-md-down-none">
                    <a class="nav-link" href="#">
                        <i class="icon-bell"></i>
                        <span class="badge badge-pill badge-danger">5</span>
                    </a>
                </li>
                <li class="nav-item d-md-down-none">
                    <a class="nav-link" href="#">
                        <i class="icon-list"></i>
                    </a>
                </li>
                <li class="nav-item d-md-down-none">
                    <a class="nav-link" href="#">
                        <i class="icon-location-pin"></i>
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                        <img class="img-avatar" src="{{ avoca_static() }}/img/avatars/6.jpg" alt="admin@bootstrapmaster.com">
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <div class="dropdown-header text-center">
                            <strong>Account</strong>
                        </div>
                        <a class="dropdown-item" href="#">
                            <i class="fa fa-bell-o"></i> Updates
                            <span class="badge badge-info">42</span>
                        </a>
                        <a class="dropdown-item" href="#">
                            <i class="fa fa-envelope-o"></i> Messages
                            <span class="badge badge-success">42</span>
                        </a>
                        <a class="dropdown-item" href="#">
                            <i class="fa fa-tasks"></i> Tasks
                            <span class="badge badge-danger">42</span>
                        </a>
                        <a class="dropdown-item" href="#">
                            <i class="fa fa-comments"></i> Comments
                            <span class="badge badge-warning">42</span>
                        </a>
                        <div class="dropdown-header text-center">
                            <strong>Settings</strong>
                        </div>
                        <a class="dropdown-item" href="#">
                            <i class="fa fa-user"></i> Profile</a>
                        <a class="dropdown-item" href="#">
                            <i class="fa fa-wrench"></i> Settings</a>
                        <a class="dropdown-item" href="#">
                            <i class="fa fa-usd"></i> Payments
                            <span class="badge badge-secondary">42</span>
                        </a>
                        <a class="dropdown-item" href="#">
                            <i class="fa fa-file"></i> Projects
                            <span class="badge badge-primary">42</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">
                            <i class="fa fa-shield"></i> Lock Account</a>
                        <a class="dropdown-item" href="#">
                            <i class="fa fa-lock"></i> Logout</a>
                    </div>
                </li>
            </ul>
        {% endblock %}

        <button class="navbar-toggler aside-menu-toggler d-md-down-none" type="button" data-toggle="aside-menu-lg-show">
            <span class="navbar-toggler-icon"></span>
        </button>
        <button class="navbar-toggler aside-menu-toggler d-lg-none" type="button" data-toggle="aside-menu-show">
            <span class="navbar-toggler-icon"></span>
        </button>
    </header>

    <div class="app-body">
        <div class="sidebar">
            {% block sidebar %}
                <nav class="sidebar-nav">
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ avoca_url() }}">
                                <i class="nav-icon icon-speedometer"></i> Dashboard
                                <span class="badge badge-primary">NEW</span>
                            </a>
                        </li>

                        <li class="nav-title">{{ __('Settings') }}</li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ avoca_admin('/settings') }}">
                                <i class="nav-icon icon-drop"></i> App config
                            </a>
                        </li>

                        <li class="nav-title">{{ __('Modules') }}</li>

                        <li class="nav-item nav-dropdown">
                            <a class="nav-link nav-dropdown-toggle" href="{{ avoca_url('/users') }}">
                                <i class="nav-icon icon-puzzle"></i> {{ __('Users') }}
                            </a>
                            <ul class="nav-dropdown-items">
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ avoca_url('/users') }}">
                                        <i class="nav-icon icon-puzzle"></i> {{ __('View users') }}
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ avoca_url('/users/edit') }}">
                                        <i class="nav-icon icon-puzzle"></i> {{ __('Create user') }}
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a href="{{ avoca_url('/emails') }}" class="nav-link">
                                <i class="nav-icon icon-puzzle"></i> {{ 'Emails'|lang }}
                            </a>
                        </li>

                        <li class="nav-item mt-auto">
                            <a class="nav-link nav-link-success" href="https://avoca.io" target="_top">
                                <i class="nav-icon icon-cloud-download"></i> Download AvocaIO
                            </a>
                        </li>
                    </ul>
                </nav>
                <button class="sidebar-minimizer brand-minimizer" type="button"></button>
            {% endblock %}
        </div>

        <main class="main">
            <!-- Breadcrumb -->
            {% block breadcrumb %}
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">Home</li>
                    <li class="breadcrumb-item">
                        <a href="#">Admin</a>
                    </li>
                    <li class="breadcrumb-item active">Dashboard</li>
                    <!-- Breadcrumb Menu-->
                    <li class="breadcrumb-menu d-md-down-none">
                        <div class="btn-group" role="group" aria-label="Button group">
                            <a class="btn" href="#">
                                <i class="icon-speech"></i>
                            </a>
                            <a class="btn" href="./">
                                <i class="icon-graph"></i>  Dashboard</a>
                            <a class="btn" href="#">
                                <i class="icon-settings"></i>  Settings</a>
                        </div>
                    </li>
                </ol>
            {% endblock %}

            <!-- Content -->
            <div class="container-fluid">
                <div class="animated fadeIn">
                    {% block content %}{% endblock %}
                </div>
            </div>
        </main>
    </div>

    {% block modals %}
        <div class="modal fade" id="modal-application" data-toggle="modal" data-backdrop="static" data-keyboard="false"></div>
    {% endblock %}

    <footer class="app-footer">
        {% block footer %}
            <div>
                <a href="https://avoca.io">AvocaIO</a>
                <span>&copy; 2018 avoca.io</span>
            </div>
            <div class="ml-auto">
                <span>Powered by</span>
                <a href="https://avoca.io">AvocaIO</a>
            </div>
        {% endblock %}
    </footer>

    {% include 'layouts/manage.footer.inc.twig' %}

    {% block jsLive %}{% endblock %}
</body>
</html>
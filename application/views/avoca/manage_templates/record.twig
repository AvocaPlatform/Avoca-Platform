{% extends 'layouts/manage.twig' %}

{% block content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    {{ record[viewdefs.title] }}

                    <div class="card-header-actions">
                        <a class="card-header-action btn-setting" href="{{ avoca_url(list_link) }}">
                            <i class="fa fa-list"></i>
                        </a>
                        <a class="card-header-action btn-setting" href="{{ avoca_url(Model.fieldModel().replace(edit_link, record)) }}">
                            <i class="fa fa-pencil"></i>
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    {% if recorddefs %}
                        <table class="table table-responsive-sm table-striped">
                            <tbody>
                                {% for group in recorddefs.fields %}
                                    <tr>
                                        {% for field, option in group %}
                                            <td>{{ Model.fieldModel().label(field, option) }}</td>
                                            <td>{{ Model.fieldModel().value(field, record, option) }}</td>
                                        {% endfor %}
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        <div class="alert alert-warning">{{ 'No config layout'|lang }}</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}